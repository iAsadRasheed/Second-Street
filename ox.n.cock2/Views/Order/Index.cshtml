
@{
    ViewBag.Title = "Orders";
    var selectedDate = ViewBag.Date != null ? (string)ViewBag.Date : "";
}

<div class="well  well-sm bg-success">
    <h4 class="text-center">Orders</h4>
</div>
<hr />
<div class="row">
    <div class="row col-md-offset-8">
        <div class="form-inline" action="/action_page.php">
            <div class="form-group">
                <label for="datetimepicker">Select Date:</label>
                <input type="date" name="date" class="form-control" id="datetimepicker" placeholder="dd-mm-yyyy" value="@selectedDate">
            </div>
            <button type="button" onclick="searchByDate();" class="btn btn-primary">Search</button>
        </div>
    </div>
</div>
<br />

@{
    
    Html.RenderAction("_Orders", new { strDate = selectedDate });
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/Order.Index.js"></script>
<script>
    function searchByDate() {

        let selectedDate = $("#datetimepicker").val();
        if (selectedDate == '')
        {
            alert('Please select valid date.');
        }
        else {
            window.location = "/Order/Index?strDate=" + selectedDate;
        }        
    }
</script>