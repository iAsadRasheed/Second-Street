@model IEnumerable<ox.n.cock2.Models.ProductCategory>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<h5>Product Category</h5>
<hr />

<p>
    @Html.ActionLink("Add New", "Create")
</p>
<table class="table">
    <tr class="alert alert-success">
        <th>
            Category Name
        </th>
        <th>
            Updated Date
        </th>
        <th>
            Updated By
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.CategoryName, "Details", new { id = item.Id })
            </td>
            <td>
                @if (item.UpdatedDate is null)
                {
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.UpdatedDate)
                }
            </td>
            <td>
                @if (item.AspNetUser1 is null)
                {
                    @Html.DisplayFor(modelItem => item.AspNetUser.Email)
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.AspNetUser1.Email)
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
